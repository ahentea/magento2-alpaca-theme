<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    layout="2columns-left"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="content">
            <block
                class="Magento\Framework\View\Element\Template"
                name="content.catalog"
                template="Magento_CatalogSearch::content-search.phtml"
            />
        </referenceContainer>
        <move element="div.sidebar.main" destination="content.catalog"/>
        <move element="search.result" destination="content.catalog"/>
        <move element="catalog.compare.sidebar" destination="content.catalog"/>
        <move element="sale.reorder.sidebar" destination="content.catalog"/>
        <move element="wishlist_sidebar" destination="content.catalog"/>
    </body>
</page>
